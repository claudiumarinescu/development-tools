conky.config = {
    alignment = 'tr',
    background = false,
    border_width = 1,
    cpu_avg_samples = 5,
	double_buffer = true,
	default_color = 'white',
    default_outline_color = 'white',
    default_shade_color = 'white',
    draw_borders = false,
    draw_graph_borders = true,
    draw_outline = false,
    draw_shades = false,
    use_xft = true,
    font = 'Ubuntu Mono:size=14',
    gap_x = 40,
    gap_y = 40,
    minimum_height = 5,
	minimum_width = 400,
    net_avg_samples = 2,
    no_buffers = true,
    out_to_console = false,
    out_to_stderr = false,
    extra_newline = false,
    own_window = true,
    own_window_class = 'Conky',
    own_window_type = 'normal',
    own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
    own_window_argb_visual = true,
	own_window_argb_value = 150,
    stippled_borders = 0,
    update_interval = 1.0,
    uppercase = false,
    use_spacer = 'left',
    pad_percents = 5,
    show_graph_scale = false,
    show_graph_range = false,
    xinerama_head = 1
}

conky.text = [[
${time %H:%M:%S}${alignr}${time %d.%m.%Y}

${voffset -16}${font sans-serif:bold:size=22}${alignc}${time %H:%M}${font}
${voffset 4}${alignc}${time %A %B %d, %Y}
${font}${voffset -4}

${font sans-serif:bold:size=13}SYSTEM ${hr 2}
${font sans-serif:normal:size=10}$sysname $kernel $alignr $machine
Host:$alignr$nodename
Uptime:$alignr$uptime
Processes: $alignr ${execi 1000 ps aux | wc -l}


${font sans-serif:bold:size=13}CPU ${hr 2}
${font sans-serif:normal:size=10}${execi 1000 grep model /proc/cpuinfo | cut -d : -f2 | tail -1 | sed 's/\s//'}
CPU: ${cpu cpu1}%
${cpubar cpu1}
History:
${font sans-serif:normal:size=10}${cpugraph cpu1}


${font sans-serif:bold:size=13}MEMORY ${hr 2}
${font sans-serif:normal:size=10}RAM $alignc $mem / $memmax $alignr $memperc%
$membar
SWAP $alignc ${swap} / ${swapmax} $alignr ${swapperc}%
${swapbar}
${font sans-serif:normal:size=10}Disk usage $alignc ${fs_used /} / ${fs_size /} $alignr ${fs_used_perc /}%
${fs_bar /}


${font Ubuntu:bold:size=13}NETWORK ${hr 2}
${font sans-serif:normal:size=10}Local IPs:${alignr}External IP:
${execi 1000 ip a | grep inet | grep -vw lo | grep -v inet6 | grep -v 'docker' | grep -v 'br-' | cut -d \/ -f1 | sed 's/[^0-9\.]*//g'}  ${alignr}${execi 1000  wget -q -O- http://ipecho.net/plain; echo}

${font sans-serif:normal:size=10}Down: ${downspeed wlp3s0}  ${alignr}Up: ${upspeed wlp3s0} 
${color lightgray}${downspeedgraph wlp3s0 80,130 } ${alignr}${upspeedgraph wlp3s0 80,130 }$color


${font sans-serif:bold:size=13}TOP PROCESSES ${hr 2}
${font sans-serif:normal:size=10}Name $alignr PID         CPU%         MEM%${font sans-serif:normal:size=10}  
${voffset 5}${goto 10}${top name 1}${goto 200}${top pid 1}${goto 267}${top cpu 1}%${goto 350}${top mem 1}%
${voffset 5}${goto 10}${top name 2}${goto 200}${top pid 2}${goto 267}${top cpu 2}%${goto 350}${top mem 2}%
${voffset 5}${goto 10}${top name 3}${goto 200}${top pid 3}${goto 267}${top cpu 3}%${goto 350}${top mem 3}%
${voffset 5}${goto 10}${top name 4}${goto 200}${top pid 4}${goto 267}${top cpu 4}%${goto 350}${top mem 4}%
]]
